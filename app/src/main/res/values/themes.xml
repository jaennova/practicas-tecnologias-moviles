<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TecMoviles" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.TecMoviles">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Set status bar icons to light (white) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TecMoviles" parent="Base.Theme.TecMoviles" />

    <style name="Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>